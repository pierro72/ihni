{% extends 'base.html.twig' %}
{% set inAdmin = false %}
{% block body %}
    <div class="content-wrapper">
        <div class="container">
            <section class="content-header"><h1>Sélection de l'équipe</h1></section>
            <section class="content">
                <div class="row">

                    {% for team in teams %}


                        <div class="col-md-4">
                            <div class="box box-primary">
                                <div class="box-body box-profile">
                                    <h3 class="profile-username text-center">{{ team.nom }}</h3>

                                    <ul class="list-group list-group-unbordered">
                                        <li class="list-group-item"><i class="fa fa-calendar"></i><b> Créée le</b><span
                                                    class="pull-right">{{ team.createdAt|date('d M, Y') }}</span></li>
                                        <!-- Afficher le(s) pilote(s) -->
                                        {% for teamRole in team.teamRoles %}
                                            {% if teamRole.role.nom == 'pilote' %}
                                                <li class="list-group-item"><i class="fa fa-paw"></i><b> Pilote</b><span
                                                            class="pull-right">{{ teamRole.user }}</span></li>
                                            {% endif %}
                                        {% endfor %}
                                        <!-- Afficher les modules dispo -->
                                        <li class="list-group-item"><i class="fa fa-users"></i><b> Utilisateurs</b><span
                                                    class="pull-right">{{ team.teamRoles|length }}</span></li>
                                        <li class="list-group-item"><i class="fa fa-plug"></i><b> Modules</b>
                                            <p class="pull-right">
                                                {% for module in team.modules %}
                                                    {% if module in team.modules %}
                                                        <span
                                                                class="label label-primary">{{ module.nom }}</span>
                                                    {% endif %}

                                                {% endfor %}
                                            </p>
                                        </li>
                                    </ul>
                                    <a href="{{ path('module_table', {'equipe': team.id}) }}" class="btn btn-default">Choisir</a>
                                </div>
                            </div>
                        </div>




                    {% endfor %}

                </div>
            </section>
        </div>
    </div>
{% endblock %}